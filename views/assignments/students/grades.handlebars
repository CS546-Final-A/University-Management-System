<div class="container-fluid">
    <h2>
        <div class="d-flex mb-2">
            <div class="my-auto"><img class="iconSwitch" src="/icons/grade.svg" alt="moduleIcon"> Grades
            </div>
            <div class="my-auto text-muted fs-5" id="reportCount"></div>
            <div class="form-floating ms-auto fs-6">
                <input class="form-control tabledisplay" type="text" placeholder="" id="searchInput" />
                <label for="#searchInput"><img class="iconSwitch" src="/icons/search.svg" alt="grade icon">
                    Search</label>
            </div>
        </div>
    </h2>
</div>
<div class="table-responsive glassEffect my-4">
    <table class="table table-striped h-100 mb-0">
        <thead>
            <tr>
                <th scope="col">Assignment Name</th>
                <th scope="col">Due Date</th>
                <th scope="col">Weight</th>
                <th scope="col">Max Score</th>
                <th scope="col">Your Score</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each assignments}}
            <tr class="searchData">
                <td>{{this.assignmentName}}</td>
                <td>{{this.assignmentDueDate}}</td>
                <td>{{this.assignmentWeight}}</td>
                <td>{{this.assignmentMaxScore}}</td>
                <td>{{this.scores}}</td>
                <td><a href="../assignments/view/{{this._id}}/" class="btn btn-info">View</a></td>
            </tr>
            {{/each}}
            <tr>
                <td>Total:</td>
                <td></td>
                <td></td>
                <td></td>
                <td>{{grades.grade}}</td>
                <td>{{grades.letterGrade}}</td>
            </tr>
        </tbody>

    </table>
</div>