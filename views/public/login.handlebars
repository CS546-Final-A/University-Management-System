<div class="card col-12 col-md-4 offset-md-4 glassEffect">
    <div class="card-header glassEffect">
        <img src="./icons/key.svg" alt="loginIcon">Login
    </div>
    <div class="card-body">
        <form id="loginform">
            <div class="form-floating mb-3">
                <input class="form-control" type="email" id="email" name="email" placeholder="name@example.com"
                    required>
                <label for="email">Email:</label>
            </div>

            <div class="form-floating mb-3">
                <input class="form-control" type="password" id="password" name="password" placeholder="Password"
                    required>
                <label for="password">Password:</label>
            </div>

            <div class="row">
                <div class="offset-4 col-4 mt-3">
                    <input type="hidden" id="csrf" value="{{_csrf}}">
                    <button class="btnSubmit col-12 py-2" type="submit" id="submit">Login</button>
                </div>
            </div>
        </form>
        <a href="/resetpassword">Forgot Password?</a>
    </div>
</div>

