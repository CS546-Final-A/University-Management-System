<!DOCTYPE html>
<html lang="en">

<head>
    <script>
        // Access the darkmode variable from res.locals
        var _isDarkMode = {{ darkmode }};
    </script>
    <meta charset="utf-8" />

    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/styles/bootstrap.min.css" />
    <link rel="stylesheet" href="/styles/bootstrap-select.min.css" />
    <link rel="stylesheet" href="/styles/styles.css" />
    <link rel="stylesheet" href="/styles/sidebar.css" />
    <script src="/scripts/jquery.min.js"></script>

    <script src="/scripts/styles.js"></script>
    <!-- JS Imports -->
    <script src="/scripts/bootstrap.bundle.min.js"></script>
    <script src="/scripts/bootstrap-select.min.js"></script>

    <title>University Management System</title>
</head>

<body>

    <div class="navigation-wrap bg-light start-header">
        <div class="row">
            <header class="col-12">
                <ul id="navigationList" class="nav d-flex mx-5">
                    <li class="nav-item hamIcon me-4">
                        <div id="sidebarCollapse" class="border-0 p-0 m-0">
                            <div class="hamburger p-1" id="hamburger-4">
                                <span class="line"></span>
                                <span class="line"></span>
                                <span class="line"></span>
                            </div>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard">
                            <span class="fs-5 position-relative" id="homeText">Dashboard</span>
                        </a>
                    </li>

                    {{#ifUserType 'Admin,Student' session_type}}
                    <li class="nav-item">
                        <a class="nav-link" href="/courses/">
                            <span class="fs-5 position-relative" id="coursesText">Course</span>
                        </a>
                    </li>
                    {{/ifUserType}}
                    {{#ifUserType 'Admin' session_type}}
                    <li class="nav-item">
                        <a class="nav-link" href="/configuration/">
                            <span class="fs-5 position-relative" id="configurationText">Configuration</span>
                        </a>
                    </li>
                    {{/ifUserType}}
                    {{#if session_type}}
                    <li class="nav-item ms-auto dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                            data-bs-auto-close="outside" aria-expanded="false"><img class="iconSwitch"
                                src="/icons/user-circle.svg" alt="user-circle-icon" /></a>
                        <ul class="dropdown-menu p-0" id="navProfileDropdown">
                            <li>
                                <div class="container p-0">
                                    <div class="m-2 px-2">
                                        {{session_name}} <span class="text-muted fs-6"> {{session_type}} </span>
                                    </div>
                                    <div class="m-2 px-2">
                                        {{session_email}}
                                    </div>
                                    <div id="switch" class="m-4">
                                        <div id="circle"></div>
                                    </div>
                                    <div class="my-auto d-flex justify-content-center btnNavbar">
                                        <a class="text-center w-100 ps-0 mb-0 py-2 w-100 btnNavbar"
                                            href="/logout">Logout</a>
                                    </div>

                                </div>
                            </li>
                        </ul>
                    </li>
                    {{/if}}
                </ul>
            </header>
        </div>
    </div>

    <div class="wrapper">
        <!-- Sidebar  -->
        <nav id="sidebar" class="glassEffect">
            <ul class="list-unstyled components">
                <li class="py-1">
                    <a class="hover" href="/sections/{{sectionID}}"><span
                            class="animateHover"></span><span>Home</span></a>
                </li>
                <li class="py-1">
                    <a class="hover" href="/sections/{{sectionID}}/modules"><span
                            class="animateHover"></span><span>Modules</span></a>
                </li>
                <li class="py-1">
                    <a class="hover" href="/sections/{{sectionID}}/assignments/"><span
                            class="animateHover"></span><span>Assignments</span></a>
                </li>
                <li class="py-1">
                    <a class="hover" href="/sections/{{sectionID}}/grades/"><span
                            class="animateHover"></span><span>Grades</span></a>
                </li>
                <li class="py-1">
                    <a class="hover" href="/courses/{{courseId}}/materials/"><span
                            class="animateHover"></span><span>Course Repository</span>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Page Content  -->
        <div id="content" class="mt-4">
            {{{body}}}
        </div>
    </div>
    <div class="toast-container position-absolute top-0 end-0 p-5">
        <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true"
            data-bs-autohide="false">
            <div class="toast-header">
                <img src="/icons/error.svg" alt="errorIcon">
                <strong class="me-auto ms-2" id="toastHeadMsg">Bootstrap</strong>
                <small>Just Now</small>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body">
                Hello, world! This is a toast message.
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
                $('#content').toggleClass('active');
            });
        });
    </script>
    <script language="JavaScript" type="text/javascript" src="/scripts/verification.js"></script>
    <script language="JavaScript" type="text/javascript" src="/scripts/request.js"></script>
    {{#if script}}
    {{> (lookup . 'script') }}
    {{/if}}
</body>

</html>